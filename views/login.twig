{% import "macros.twig" as macros %}
{% extends "layout.twig" %}
{% block content %}
    <h1>{{ title }}</h1>
    {% if is_logged %}
        <h2>You are already logged in.</h2>
        <a href="?logout">Logout</a>
    {% else %}
        {% if message %}
            {{ macros.alert('Information', message) }}
        {% endif %}
    <form method="post" action="">
        <div class="form-group">
            <label for="login">Username</label>
            <input type="login" class="form-control" id="login" name="login" value="{{ login }}" aria-describedby="loginHelp" placeholder="Username">
            <small id="loginHelp" class="form-text text-muted">Please, enter your username.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary" name="submit">Submit</button>
    </form>
    {% endif %}
{% endblock %}